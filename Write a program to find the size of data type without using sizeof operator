/******Problem statement:-Find the size of data type using pointer   *********/


#include <stdio.h>

#define find_size(x) (size_t)(&x+1) - (size_t)(&x)
int main()
{
   int a;
   char b;
   float c;
   double d;
   
  printf("%d",find_size(a));
  printf("%d",find_size(b));
  printf("%d",find_size(c));
  printf("%d",find_size(d));
  return 0;
}
